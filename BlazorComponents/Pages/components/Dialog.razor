@using BootzorComponents.Components.Accordion
@using BootzorComponents.Components.Alert
@using BootzorComponents.Components.Dialog
@using static BootzorComponents.Components.Dialog.ZorDialog;

@page "/components/dialog"

<PageTitle>BlazorComponents - Bootzor</PageTitle>
  
<div class="appBootzor">
    <header>
        <BCHeader/>
    </header>
    <div class="appContent responsive"> 
        <BCNSidebar/> 

        <BCArticleSection Title="Accordion">
            <Description>
                <p>Add dialog modal to show any confirmation box or alert.</p>
            </Description>

            <ComponentParameters>
                                
                                          
                <ParameterSection>
                    <Name>ShowModal</Name>
                    <Type>bool</Type>
                    <TypeDescription>true | false</TypeDescription>
                    <Description>
                        <p>Indicates if the modal has to appear.</p>
                    </Description>
                </ParameterSection>            
                
                <ParameterSection>
                    <Name>DialogType</Name>
                    <Type>BZ_Dialog.CollectionDialogTypes</Type>
                    <TypeDescription>Ok | OkCancel | Cancel</TypeDescription>
                    <Description>
                        <p>Indicates the numbner of buttons.</p>
                    </Description>
                </ParameterSection>                  
                
                <ParameterSection>
                    <Name>ResultModal</Name>
                    <Type>EventCallback&#60;bool&#62;</Type>
                    <Description>
                        <p>EventCallback to have the result when press a button cancel or ok.</p>
                    </Description>
                </ParameterSection>   
                
                           
                <ParameterSection>
                    <Name>Overlay</Name>
                    <Type>bool</Type>
                    <TypeDescription>true | false</TypeDescription>
                    <Description>
                        <p>Indicate if the overlay need to appear or not.</p>
                    </Description>
                </ParameterSection>            
                
                           
                <ParameterSection>
                    <Name>Position</Name>
                    <Type>BZ_Dialog.DialogPosition</Type>
                    <TypeDescription>top | bottom</TypeDescription>
                    <Description>
                        <p>Position of the dialog.</p>
                    </Description>
                </ParameterSection>    


            </ComponentParameters>

            <Example>
                &#60;<b>ZorDialog</b> <i>DialogType</i>="BZ_Dialog.CollectionDialogTypes.OkCancel"&#62;
                    <i>ResultModal</i>="EventCallback&#60;bool"&#60;
                    <i>Position</i>="BZ_Dialog.DialogPosition.Top"
                    <i>Overlay</i>="BZ_Dialog.DialogPosition.Top"

                    &#60;Title&#62;
                        &#60;p&#62;Title&#60;/p&#62;
                    &#60;/Title&#62;
                    
                    &#60;Content&#62;
                        &#60;p&#62;FragmentRender Content&#60;/p&#62;
                    &#60;/Content&#62;

                &#60;/<b>BZ_Dialog</b>&#62;
            </Example>

            
            <Result>

                <button @onclick="@(() => ShowModalWithOverlay(DialogPosition.Top,true))" >Dialog Top</button>
                <button @onclick="@(() => ShowModalWithOverlay(DialogPosition.TopLeft,true))" >Dialog TopLeft</button>
                <button @onclick="@(() => ShowModalWithOverlay(DialogPosition.TopRight,true))" >Dialog TopRight</button>
                <button @onclick="@(() => ShowModalWithOverlay(DialogPosition.Bottom,true))" >Dialog Bottom</button>
                <button @onclick="@(() => ShowModalWithOverlay(DialogPosition.BottomRight,true))" >Dialog BottomRight</button>
                <button @onclick="@(() => ShowModalWithOverlay(DialogPosition.BottomLeft,true))" >Dialog BottomLeft</button>

                <button @onclick="@(() => ShowModalWithOverlay(DialogPosition.Top,false))" >Dialog without owerlay</button>

                <ZorDialog  @ref="zorDialog"
                    DialogType="DialogTypes.OkCancel"
                    ResultModal="EventResult"
                    Position=@Position
                    ShowDialog=@ShowDialog
                    Overlay=@ShowOverlay>

                    <Title> 
                        Dialog title
                    </Title>
                    
                    <Content>
                        This is the Content! 
                    </Content>

                </ZorDialog>

            </Result>

        </BCArticleSection> 
    </div>
</div>

@code{

    public ZorDialog zorDialog;

    private bool ShowDialog { get; set; } = false;
    private DialogPosition Position { get; set; } = DialogPosition.Top; 
    private bool ShowOverlay { get; set; }= true;

    public void ShowModalWithOverlay(DialogPosition position, bool showOverlay)
    {
        ShowOverlay = showOverlay;
        Position = position;
        ShowDialog = true;
    }

    public void EventResult(bool result)
    {
        ShowDialog = false;
    }
}