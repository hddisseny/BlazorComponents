<div class="__bz_alert @TypeAlert" role="alert">@ChildContent</div>

@code {
    /// <summary>
    /// Visible title text 
    /// </summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    /// <summary>
    /// TypeAlert is the name of the css class that is assigned to the item
    /// - primary
    /// - secondary
    /// - success
    /// - fail
    /// - warning
    /// - info
    /// </summary>
    [Parameter]
    public string? TypeAlert { get; set; }

}
